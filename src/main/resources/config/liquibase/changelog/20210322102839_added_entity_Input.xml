            </column>
            <column name="url" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="database" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="input_data" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="input_data_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="access" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="basic_auth" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="basic_auth_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="basic_auth_password" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="with_credentials" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="secure_input_data" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="secure_input_data_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="dapr_pub_sub_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="dapr_topic" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="dapr_route" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="env_account_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="input" columnName="created_on" columnDataType="datetime"/>
        <dropDefaultValue tableName="input" columnName="updated_on" columnDataType="datetime"/>
    </changeSet>

